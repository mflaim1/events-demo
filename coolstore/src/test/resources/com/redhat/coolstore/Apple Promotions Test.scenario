<scenario>
  <name>Apple Promotions Test.scenario</name>
  <maxRuleFirings>100000</maxRuleFirings>
  <globals/>
  <fixtures>
    <fact-data>
      <type>ShoppingCartItem</type>
      <fieldData>
        <field-data>
          <name>itemId</name>
          <value>1</value>
          <nature>4</nature>
        </field-data>
        <field-data>
          <name>price</name>
          <value>150.00</value>
          <nature>4</nature>
        </field-data>
        <field-data>
          <name>name</name>
          <value>Item1</value>
          <nature>4</nature>
        </field-data>
        <field-data>
          <name>promoSavings</name>
          <value>0</value>
          <nature>4</nature>
        </field-data>
        <field-data>
          <name>quantity</name>
          <value>1</value>
          <nature>4</nature>
        </field-data>
        <field-data>
          <name>shoppingCart</name>
          <value>=shoppingCart</value>
          <nature>2</nature>
        </field-data>
      </fieldData>
      <name>shoppingCartItem</name>
      <isModify>false</isModify>
    </fact-data>
    <org.drools.workbench.models.testscenarios.shared.ActivateRuleFlowGroup>
      <name>promo-cart-rules</name>
    </org.drools.workbench.models.testscenarios.shared.ActivateRuleFlowGroup>
    <fact-data>
      <type>ShoppingCart</type>
      <fieldData/>
      <name>shoppingCart</name>
      <isModify>false</isModify>
    </fact-data>
    <fact-data>
      <type>PromoEvent</type>
      <fieldData>
        <field-data>
          <name>itemId</name>
          <value>1</value>
          <nature>4</nature>
        </field-data>
        <field-data>
          <name>percentOff</name>
          <value>0.50</value>
          <nature>4</nature>
        </field-data>
      </fieldData>
      <name>promoEvent</name>
      <isModify>false</isModify>
    </fact-data>
    <execution-trace/>
    <expect-rule>
      <ruleName>Apply Cart Item Promotions</ruleName>
      <expectedCount>1</expectedCount>
    </expect-rule>
    <expect-fact>
      <fieldValues>
        <expect-field>
          <fieldName>promoSavings</fieldName>
          <expected>75</expected>
          <operator>==</operator>
          <nature>0</nature>
        </expect-field>
        <expect-field>
          <fieldName>price</fieldName>
          <expected>75</expected>
          <operator>==</operator>
          <nature>0</nature>
        </expect-field>
      </fieldValues>
      <name>shoppingCartItem</name>
      <anonymous>false</anonymous>
    </expect-fact>
  </fixtures>
  <rules/>
  <inclusive>false</inclusive>
  <packageName>com.redhat.coolstore</packageName>
  <imports>
    <imports/>
  </imports>
  <ksessions>
    <string>coolstore-stateful-kie-session</string>
  </ksessions>
</scenario>